#!/usr/bin/env python3

import sys
sys.path.insert(0, "/opt/veupathdb/lib/python")
sys.path.insert(0, "../src/lib/python")
from Migrator import Migrator

def usage():
    msg = """
Migrate user datasets from the iRODs UD system to VDI.

Usage:  migrate tiny_db_json_file work_dir ud_service_url vdi_service_url vdi_admin_auth_token count_limit <projects...>

Environment: UD_AUTH_TKT is the value of the auth_tkt

If projects is empty, then do all projects

"""
    print(msg, file=sys.stderr)
    sys.exit(2)

def main():
    if len(sys.argv) < 8:
        usage()
    migrator = Migrator()
    myArgs = sys.argv
    myArgs.pop(0)
    migrator.migrate(*myArgs)

if __name__ == "__main__":
    sys.exit(main())
